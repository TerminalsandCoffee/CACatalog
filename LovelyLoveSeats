#creating a variable - assigning a description of the business

lovely_loveseat_description = "Lovely Loveseat. Tufted polyester blend on wood. 32 inches high x 40 inches wide x 30 inches deep. Red or white."

#price of loveseat
lovely_loveseat_price = 254.00

#description of a new piece of furniture 
stylish_settee_description = "Stylish Settee. Faux leather on birch. 29.50 inches high x 54.75 inches wide x 28 inches deep. Black."

#setting price 
stylish_settee_price = 180.50

luxurious_lamp_description = "Luxurious Lamp. Glass and iron. 36 inches tall. Brown with cream shade."

luxurious_lamp_price = 52.15

#sales tax equal to 8.8 percent 
sales_tax = .088

#keep a running tally of their expenses 
customer_one_total = 0

#keep a list of the descriptions of things theyâ€™re purchasing
customer_one_itemization = ""

#new purchase 
customer_one_total += lovely_loveseat_price
customer_one_itemization += lovely_loveseat_description
customer_one_total += luxurious_lamp_price

#keeping track of the items purchased
customer_one_itemization += luxurious_lamp_description

#checkout
customer_one_tax =(customer_one_total * sales_tax)

#adds sales tax cx total = cx total + tax
customer_one_total += customer_one_tax


print ("Customer One Items:")
print (customer_one_itemization)
print ("Customer One Total:", customer_one_total)
